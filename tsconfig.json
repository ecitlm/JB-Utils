{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist/@types",
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["./src/*"],
  "exclude": [
    "node_modules"
  ]
}
